// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": "eslint:all",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "quotes": [2, "single"],
    "indent": [2, 4],
    "one-var": "off",
    "no-console": "off",
    "no-inline-comments": "off",
    "dot-location": [2, "property"],
    "arrow-parens": [2, "as-needed"],
    "padded-blocks": [2, "never"],
    "max-len": [2, 100],
    "max-statements": [2, 20],
    "sort-imports": "off"
  }
}